{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["custom.d.ts"]
  },
  "exclude": ["node_modules"],
  "include": ["./api/*.ts", "src/**/*.ts", "src/middlewares/append-express-response-property.ts"],
}